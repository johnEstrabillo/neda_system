    <body class="top-navbar-fixed">
        <div class="main-wrapper">
            <div class="content-wrapper">

                <div class="content-container">
                  <%-include ../includes/topbar.ejs%>
                  <%-include ../includes/leftbar.ejs%>
                  <!---Body include here -->
                    <div class="main-page">
                        <div class="container-fluid">
                          <div class="col-sm-6 col-sm-offset-3 modBorder">

                              <p class="h3 text-center">Vehicle and Owner's Info</p>
                              <hr>
                              <div class="form-group">
                                <label for="exampleInputEmail1">Plate Number:</label>
                                <input type="text" class="form-control" id="plateNumber" aria-describedby="emailHelp" required>
                              </div>
                              <div class="form-group">
                                <label for="exampleInputEmail1">Lastname</label>
                                <input type="text" class="form-control" id="lastname" aria-describedby="emailHelp" required>
                              </div>
                              <div class="form-group">
                                <label for="exampleInputEmail1">Firstname</label>
                                <input type="text" class="form-control" id="firstname" aria-describedby="emailHelp" required>
                              </div>
                              <div class="form-group">
                                <label for="exampleInputEmail1">Brand Name:</label>
                                <select class="form-control" id="brandName">
                                  <%vehicle.forEach(function(vehicle){%>
                                    <option value="<%-vehicle.brand%> <%-vehicle.model%>"><%-vehicle.brand.toUpperCase()%> <%-vehicle.model.toUpperCase()%></option>
                                  <%})%>
                                </select>
                              </div>
                              <div class="form-group">
                                <label for="exampleInputEmail1" required>Color:</label>
                                <input type="text" class="form-control" id="color" aria-describedby="emailHelp">
                              </div>
                              <div class="form-group">
                                <label for="exampleInputPassword1">Driver's Fullname (Optional)</label>
                                <input type="text" class="form-control" id="driver">
                              </div>
                              <div class="form-group">
                                <label for="exampleInputPassword1">Remarks (Optional)</label>
                                <select class="form-control" id="remarks">
                                  <option value="none">None</option>
                                  <option value="personal">Personal</option>
                                  <option value="official service">Official Service</option>
                                </select>
                              </div>
                                <div class="row">
                                  <div class="col-sm-6">
                                    <button type="submit" id="submitBtn" class="btn btn-success btn-block">Submit</button>
                                  </div>
                                  <div class="col-sm-6">
                                    <a href='/admin/view-owner' class="btn btn-danger btn-block">Cancel</a>
                                  </div>
                              </div>                                   
                          </div>

                      
                            
                        </div>
                    </div>
                    <!-- /.main-page -->


                </div>
                <!-- /.content-container -->
            </div>
            <!-- /.content-wrapper -->
        </div>



