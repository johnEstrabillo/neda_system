        <script>
            $(function(){

                // Counter for dashboard stats
                $('.counter').counterUp({
                    delay: 10,
                    time: 1000
                });

                // Welcome notification
                toastr.options = {
                  "closeButton": true,
                  "debug": false,
                  "newestOnTop": false,
                  "progressBar": false,
                  "positionClass": "toast-top-right",
                  "preventDuplicates": false,
                  "onclick": null,
                  "showDuration": "300",
                  "hideDuration": "1000",
                  "timeOut": "5000",
                  "extendedTimeOut": "1000",
                  "showEasing": "swing",
                  "hideEasing": "linear",
                  "showMethod": "fadeIn",
                  "hideMethod": "fadeOut"
                }
                //toastr["success"]("<%-fullname%>, Welcome to NEDA Management System!");

            });
        </script>
    </body>
</html>

<script type="text/javascript">
  $('document').ready(function(){
  
    $('#submitBtn').click(function(){
      var plateNumber = $('#plateNumber').val();
      var lastname = $('#lastname').val();
      var firstname = $('#firstname').val();
      var brandName = $('#brandName').val();
      var color = $('#color').val();
      var driver = $('#driver').val();
      var remarks = $('#remarks').val();


      if(plateNumber === '' || lastname === '' || firstname === '' || color === ''){
          alert('Do not leave empty Fields');
          return false;
      }else{
        
        $.post('/save_owner_vehicle', {
          plateNumber: plateNumber.toLowerCase(),
          lastname: lastname.toLowerCase(),
          firstname: firstname.toLowerCase(),
          brandName: brandName.toLowerCase(),
          color: color.toLowerCase(),
          driver: driver.toLowerCase(),
          remarks: remarks.toLowerCase()
        })              


          $.confirm({
              title: 'Data Saved Successfully',
              content: 'Do you want to Add more data?',
              autoClose: 'cancel|10000',
              boxWidth: '70%',
              useBootstrap: false,
             type: 'green',
              icon: 'fa fa-check-circle',
              buttons: {
                 deleteUser: {
                   text: 'Yes',
                   btnClass: 'btn-green',
                    action: function () {

                      location.reload();

                   }
                 },
                  no: function () {
                   window.location.href = "/admin/view-owner"
                   return false;
                  }
              }
          });
              
      }                  
    })
  });
</script>

